{
  "manifest_version": 2,

  "name": "BigConsole",
  "description": "Add a multiline JavaScript console to the Chrome developer tools.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "file://*/*"
  ],

  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],

  "minimum_chrome_version": "26.0",
  "devtools_page": "devtools.html"
}